<div class="modal fade" id="editAdmissionModal"tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="width: 670px;">
            <div class="modal-header">
                <h5 class="modal-title">Admission Form Edit</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                  <div class="card m-4" >
        <div class="card-body p-4">
          <!-- Logo -->
          <div class="app-brand">           
            <div class="justify-content-center text-center mb-4">
              <span class="app-brand-logo demo">
                <img src="{{ asset('build/images/logo.png') }}" height="35" />
              </span>
              <span
                class="app-brand-text demo fw-bolder ms-2"
                style="
                  text-transform: uppercase;
                  color: #5a7db8;
                  font-size: 19px;
                "
                >PHI</span
              >
              <span
                class="app-brand-text demo menu-text fw-bolder ms-1"
                style="font-size: 19px"
                >record</span
              >
            </div>

            <hr />

            <center>
              <h4 class="mb-2">Admission Form</h4> 
              <p class="mb-4 hospital-name"></p>
            </center>
            <div class="d-flex">
            <p class="mb-2">Name of Patient:&nbsp;</p>
            <p id="patientName"></p>
            </div>
            <div class="d-flex">
            <p class="mb-2">Gender: &nbsp;</p>
            <p id="patientGender"></p>
            </div>
            <div class="d-flex">
            <p class="mb-2">Age: &nbsp;</p>
            <p id="patientAge"></p>
            </div>
            <div class="d-flex">
            <p class="mb-2">Address: &nbsp;</p>
            <p id="patientAddress"></p>
            </div>

            <!-- Form -->
              <div class="row">
                <div class="col-6">
                  <div class="mb-3">
                    <label for="admissionDate" class="form-label">Date of Admission</label>
                    <input
                      type="date"
                      class="form-control"
                      id="admissionDate"
                      name="admissionDate"
                      autofocus
                      required
                    />
                  </div>
                <div class="mb-3">
                  <label for="doctor" class="form-label">Hospital Doctor</label>
                   <select
                    name="doctor"
                    class="form-control"
                    id="doctor"
                    name="doctor"
                  >
                    <!-- In this part, you need to get the value of the registered hospitals in the system. Only those registered will be shown here. -->
                    <option value="">Select Patient Doctor</option>
                      {% for doctor in doctors %}
                            <option value="{{ doctor.id }}">{{ doctor.name }}</option>
                        {% endfor %}
                  </select>
                </div>

                  <div class="mb-3">
                    <label for="familyMember" class="form-label">Family Member</label>
                    <input
                      type="text"
                      class="form-control"
                      id="familyMember"
                      name="familyMember"
                      placeholder="Enter Patient Family Member"
                      autofocus
                      required
                    />
                  </div>

                     <input
                      id="patient"
                      type="hidden"
                      name="patient"
                      value=""
                    />

                  <div class="mb-3" style="margin-top: 32px">
                  <label for="Symptoms" class="form-label">Symptoms</label>
                    <textarea class="form-control" id="symptoms" name="symptoms" rows="5" placeholder="Write the symptoms of patient"></textarea>
                  </div>

                    <div class="mb-3">
                    <label for="bloodPressure" class="form-label">Blood Pressure</label>
                    <input
                      type="text"
                      class="form-control"
                      id="bloodPressure"
                      name="bloodPressure"
                      placeholder="(e.g. 120/90)"
                      autofocus
                      required
                    />
                  </div>
                  
                    <div class="mb-3">
                    <label for="temperature" class="form-label">Temperature</label>
                    <input
                      type="text"
                      class="form-control"
                      id="temperature"
                      name="temperature"
                      placeholder="(e.g. 38.1 C)"s
                      autofocus
                      required
                    />
                  </div>

              </div>

                <div class="col-6">
                
                  <div class="mb-3">
                    <label for="weight" class="form-label">Weight</label>
                    <input
                      type="text"
                      class="form-control"
                      id="weight"
                      name="weight"
                      placeholder="(e.g. 58kg)"
                      autofocus
                      required
                    />
                  </div>

                  <div class="mb-3">
                    <label for="respiratoryRate" class="form-label">Respiratory Rate (per minute)</label>
                    <input
                      type="text"
                      class="form-control"
                      id="respiratoryRate"
                      name="respiratoryRate"
                      placeholder="(e.g. 12 to 18)"
                      autofocus
                      required
                    />
                  </div>

                  <div class="mb-3">
                    <label for="pulseRate" class="form-label">Pulse Rate (per minute)</label>
                    <input
                      type="text"
                      class="form-control"
                      id="pulseRate"
                      name="pulseRate"
                      placeholder="(e.g. 60 to 100)"
                      autofocus
                      required
                    />
                  </div>
                  
                  <div class="mb-3">
                    <label for="oxygenSaturation" class="form-label">Oxygen Saturation (per minute)</label>
                    <input
                      type="text"
                      class="form-control"
                      id="oxygenSaturation"
                      name="oxygenSaturation"
                      placeholder="(e.g. 95)"
                      autofocus
                      required
                    />
                  </div>

                  <div class="mb-3" style="margin-top: 32px">
                    <label for="diagnosis" class="form-label">Diagnosis</label>
                    <textarea class="form-control" id="diagnosis" name="diagnosis" rows="5" placeholder="Write the symptoms of patient"></textarea>
                  </div>
              

                    </div>
                </div>
              </div>
              <button type="button" class="btn btn-primary d-grid w-50 mx-auto save-admission-btn">Save </button>
            <center>
            </center>
          </div>
        </div>
      </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>
                    Close
                </button>
            </div>
            </div>
        </div>
    </div>

