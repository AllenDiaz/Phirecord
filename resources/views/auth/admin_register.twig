{% extends 'auth/layout.twig' %}

{% block title %}Log In{% endblock %}

{% block content %}

<!-- Content -->
    <div class="container-xxl">
      <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication">
          <!-- Register Card -->
          <div class="card">
            <div class="card-body">
              <!-- Logo -->
              <div class="app-brand justify-content-center text-center mb-4">
                <span class="app-brand-logo demo">
                   <img src="{{ asset('build/images/logo.png') }}" height="35" />
                </span>
                <span
                  class="app-brand-text demo fw-bolder ms-2"
                  style="
                    text-transform: uppercase;
                    color: #5a7db8;
                    font-size: 19px;
                  "
                  >PHI</span
                >
                <span
                  class="app-brand-text demo menu-text fw-bolder ms-1"
                  style="font-size: 19px"
                  >record
                </span>
              </div>

              <hr />

              <center>
                <h4 class="mb-2">Head Admin Registration</h4>
                <p class="mb-4">Sign up to create an account!</p>
              </center>
              <div class="row">
                <div class="col-6">
                  <!-- Form -->
                  <form
                    id="register_admin"
                    class="mb-3"
                    action="/admin/register"
                    method="post"
                    enctype="multipart/form-data"
                  >
                    {{ csrf.fields | raw }}
                    <div class="mb-3">
                      <label for="Name" class="form-label">Name</label>
                      <input
                        value="{{ old.name }}"
                        type="text"
                        class="form-control {{ errors.name ? 'is-invalid' : '' }}"
                        id="name"
                        name="name"
                        placeholder="Enter your name"
                        autofocus
                        required
                      />
                      <div class="invalid-feedback">
                        {{ errors.name | first }}
                      </div>
                    </div>

                    <div class="mb-3">
                      <label for="Date of Birth" class="form-label"
                        >Date of Birth</label
                      >
                      <input
                        type="date"
                        class="form-control {{ errors.birthdate ? 'is-invalid' : '' }}"
                        id="birthdate"
                        name="birthdate"
                        required
                      />
                      <div class="invalid-feedback">
                        {{ errors.birthdate | first }}
                      </div>
                    </div>

                    <div class="mb-3">
                      <label for="Gender" class="form-label">Sex</label>
                      <select
                        name="gender"
                        class="form-control {{ errors.name ? 'is-invalid' : '' }}"
                        id="gender"
                        name="gender"
                      >
                        <option value="">Select sex...</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                      </select>
                      <div class="invalid-feedback">
                        {{ errors.name | first }}
                      </div>
                    </div>

                    <div class="mb-3">
                      <label for="Address" class="form-label">Address</label>
                      <input
                        type="text"
                        class="form-control {{ errors.name ? 'is-invalid' : '' }}"
                        id="address"
                        name="address"
                        placeholder="Enter your address"
                        autofocus
                        required
                      />
                      <div class="invalid-feedback">
                        {{ errors.name | first }}
                      </div>
                    </div>
              </div>
                    <div class="col-6">
                      <div class="mb-3">
                        <label for="email" class="form-label"
                          >Email Address</label
                        >
                        <input
                          type="email"
                          class="form-control {{ errors.name ? 'is-invalid' : '' }}"
                          id="email"
                          name="email"
                          placeholder="(e.g. user@gmail.com)"
                          autofocus
                          required
                        />
                        <div class="invalid-feedback">
                          {{ errors.name | first }}
                        </div>
                      </div>

                      <div class="mb-3">
                        <label for="Contact No" class="form-label"
                          >Contact No.</label
                        >
                        <input
                          type="text"
                          class="form-control {{ errors.name ? 'is-invalid' : '' }}"
                          id="contact"
                          name="contact"
                          placeholder="(e.g. 09xxxxxxxxx)"
                          autofocus
                          required
                        />
                        <div class="invalid-feedback">
                          {{ errors.name | first }}
                        </div>
                      </div>

                      <div class="mb-3">
                        <label for="id" class="form-label">Government ID</label>
                        <input
                          type="file"
                          class="form-control {{ govId ? 'is-invalid' : '' }}"
                          id="govId" 
                          name="govId"
                          required
                        />
                        <div class="invalid-feedback">
                          {{ govId | first }}
                        </div>
                      </div>

                      <div class="mb-3 form-password-toggle">
                        <label class="form-label" for="password"
                          >Password</label
                        >
                        <div class="input-group input-group-merge">
                          <input
                            type="password"
                            id="password"
                            class="form-control {{ errors.password ? 'is-invalid' : '' }}"
                            name="password"
                            placeholder=""
                            aria-describedby="password"
                            required
                          />
                          <span class="input-group-text cursor-pointer"
                            ><i class="bx bx-hide"></i
                          ></span>
                        </div>
                        <div class="invalid-feedback">
                          {{ errors.password | first }}
                        </div>
                      </div>

                      <div class="mb-3 form-password-toggle">
                        <label class="form-label" for="password"
                          >Confirm Password</label
                        >
                        <div class="input-group input-group-merge">
                          <input
                            type="password"
                            id="confirmPassword"
                            class="form-control {{ errors.confirmPassword ? 'is-invalid' : '' }}"
                            name="confirmPassword"
                            placeholder=""
                            aria-describedby="confirmPassword"
                            required
                          />
                          <span class="input-group-text cursor-pointer"
                            ><i class="bx bx-hide"></i
                          ></span>
                        </div>
                        <div class="invalid-feedback">
                          {{ errors.confirmPassword | first }}
                        </div>
                      </div>
                    </div>
                    <button class="btn btn-primary d-grid w-100">
                      Sign up
                    </button>
                  </form>
         

                <p class="text-center">
                  <span>Already have an account?</span>
                  <a href="/admin/login">
                    <span>Sign in instead</span>
                  </a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  <!-- / Content -->
{% endblock %}
