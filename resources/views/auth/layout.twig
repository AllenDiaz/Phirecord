<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-100">
    <head>
        <meta charset="UTF-8">
        <meta id="csrfName" name="{{ csrf.keys.name }}" content="{{ csrf.name }}">
        <meta id="csrfValue" name="{{ csrf.keys.value }}" content="{{ csrf.value }}">
        <title>{% block title %}Phirecord Auth{% endblock %}</title>
         <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
        href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
            rel="stylesheet" />
        <link rel="icon" type="image/x-icon" href="{{ asset('build/images/logo.png') }}" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('theme') }}
            {{ encore_entry_link_tags('auth') }}

        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('auth') }}
            {{ encore_entry_script_tags('eye') }}
            {{ encore_entry_script_tags('config') }}
        {% endblock %}
       
    </head>
    <body>
        {% block content %}{% endblock %}
    </body>
        <script async defer src="https://buttons.github.io/buttons.js"></script>
</html>
