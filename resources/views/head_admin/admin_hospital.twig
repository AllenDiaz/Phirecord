{% extends 'head_admin/layout.twig' %}

{% block title %}Register Hospital{% endblock %}


{% block content %}

      <!-- main -->
          <div class="container-xxl justify-content-center">
      <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication">
          <!-- Register Card -->
          <div class="card d-flex mx-auto m-2 w-1000" style="width: 45rem">
            <div class="card-body"> 
              <!-- Logo -->
              <div class="app-brand justify-content-center text-center mb-4">
                <span class="app-brand-logo demo">
                  <img src="{{ asset('build/images/logo.png') }}" height="35" />
                </span>
                <span
                  class="app-brand-text demo fw-bolder ms-2"
                  style="
                    text-transform: uppercase;
                    color: #5a7db8;
                    font-size: 19px;
                  "
                  >PHI</span
                >
                <span
                  class="app-brand-text demo menu-text fw-bolder ms-1"
                  style="font-size: 19px"
                  >record</span
                >
              </div>

              <hr />

              <center>
                <h4 class="mb-2">Health Facility Registration</h4>
                {{ html | raw}}
              </center>
              <div class="row">
                <div class="col-12">
                  <!-- Form -->
                  <form
                    id="register_admin"
                    class="mb-3"
                    action="/admin/head/register/hospital"
                    method="POST"
                    enctype="multipart/form-data"
                  >
                     {{ csrf.fields | raw }}
                    <div class="mb-3">
                      <label for="Name" class="form-label"
                        >Name of Health Facility</label
                      >
                      <input
                        type="text"
                        class="form-control {{ errors.name ? 'is-invalid' : '' }}"
                        id="name"
                        name="name"
                        placeholder="Enter your health facility name"
                        autofocus
                        required
                      />
                        <div class="invalid-feedback">
                          {{ errors.email | first }}
                        </div>
                    </div>

                    <div class="mb-3">
                      <label for="Address" class="form-label">Address</label>
                      <input
                        type="text"
                        class="form-control {{ errors.address ? 'is-invalid' : '' }}"
                        id="address"
                        name="address"
                        placeholder="Enter your address"
                        autofocus
                        required
                      />
                       <div class="invalid-feedback">
                          {{ errors.address | first }}
                        </div>
                    </div>

                    <div class="mb-3">
                      <label for="email" class="form-label"
                        >Email Address</label
                      >
                      <input
                        type="email"
                        class="form-control {{ errors.email ? 'is-invalid' : '' }}"
                        id="email"
                        name="email"
                        placeholder="(e.g. user@gmail.com)"
                        autofocus
                        required
                      />
                        <div class="invalid-feedback">
                          {{ errors.email | first }}
                        </div>
                    </div>

                    <div class="mb-3">
                      <label for="Contact No" class="form-label"
                        >Contact No.</label
                      >
                      <input
                        type="text"
                        class="form-control {{ errors.contactNo ? 'is-invalid' : '' }}"
                        id="contact"
                        name="contactNo"
                        placeholder="(e.g. 09xxxxxxxxx)"
                        autofocus
                        required
                      />
                        <div class="invalid-feedback">
                          {{ errors.contactNo | first }}
                        </div>
                    </div>

                    <div class="mb-3">
                      <label for="Proof" class="form-label"
                        >Proof of Accreditation or LTO</label
                      >
                      <input
                        type="file"
                        class="form-control {{ errors.govProof ? 'is-invalid' : '' }}"
                        id="proof"
                        name="govProof"
                        required
                      />
                        <div class="invalid-feedback">
                          {{ errors.govProof | first }}
                        </div>
                    </div>

                    <div class="mb-3">
                      <label for="Proof" class="form-label"
                        >Hospital Photo</label
                      >
                      <input
                        type="file"
                        class="form-control {{ errors.hospitalPhoto ? 'is-invalid' : '' }}"
                        id="proof"
                        name="hospitalPhoto"
                        required
                      />
                        <div class="invalid-feedback">
                          {{ errors.hospitalPhoto | first }}
                        </div>
                    </div>

                    <div class="mb-3 form-password-toggle">
                      <label class="form-label" for="password">Password</label>
                      <div class="input-group input-group-merge">
                        <input
                          type="password"
                          id="password"
                          class="form-control password {{ errors.password ? 'is-invalid' : '' }}"
                          name="password"
                          placeholder="Password"
                          aria-describedby="password"
                          required
                        />
                        <span class="input-group-text cursor-pointer"
                          ><i class="eye-password-icon bx bx-hide"></i
                        ></span>
                        <div class="invalid-feedback">
                          {{ errors.password | first }}
                        </div>
                      </div>
                    </div>
                    <div class="mb-3 form-password-toggle">
                      <label class="form-label" for="password">Confirm Password</label>
                      <div class="input-group input-group-merge">
                        <input
                          type="password"
                          id="password"
                          class="form-control confirm-password {{ errors.confirmPassword ? 'is-invalid' : '' }}"
                          name="confirmPassword"
                          placeholder="Confirm Password"
                          aria-describedby="password"
                          required
                        />
                        <span class="input-group-text cursor-pointer"
                          ><i class="eye-cpassword-icon bx bx-hide"></i
                        ></span>
                        <div class="invalid-feedback">
                          {{ errors.confirmPassword | first }}
                        </div>
                      </div>
                    </div>
                <button class="btn btn-primary d-grid w-100">Sign up</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


{% endblock %}