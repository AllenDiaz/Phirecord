{% extends 'hospital/layout.twig' %}

{% block title %}Hospital{% endblock %}


{% block content %}


      <!-- main -->
        <div class="mt-5 ml-5">
          <h1 class="mx-3">Hospital Details</h1>
        </div>
        <div class="container">
          <div class="row">
            <div
            class="profile-card col-9 my-1 d-flex justify-content-between mx-5"
            >
              <div class="d-flex flex-column">
                <img src="/img/hospital/{{ hospital.profilePicture }}" alt="" class="profile-pic" />
                <h4 class="my-3">{{ hospital.name }}</h4>
                <h5>Details:</h5>
                <p class="ms-3">
                  Email:
                  <span class="gray">{{ hospital.email }}</span>
                </p>
                <p class="ms-3">
                  Number:
                  <span class="gray">{{ hospital.contactNumber }}</span>
                </p>
                <p class="ms-3">
                  Address: 
                  <span class="gray">{{ hospital.address }}</span>
                </p>
                <p class="ms-3">CreatedAt: <span class="gray">{{ hospital.createdAt }}</span></p>
              </div>
              <div class="d-flex flex-column justify-content-between">
                <p class="gray">{{ auth.name}}</p>
              </div>
            </div>
          </div>
          <div class="col-md-12 col-lg-6"></div>
        </div>


{% endblock %}